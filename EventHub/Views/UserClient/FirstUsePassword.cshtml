@model FirstUseVM
@{
    ViewBag.Title = "Ange lösenord";
}
<div class="event-main">
    <div class="user-form bc-system-wrapper">
        <div class="bc-system-header">
            <h1>Ange lösenord</h1>
        </div>
        <div class="bc-system-body">
            <form asp-controller="UserClient" asp-action="FirstUsePassword" method="post">
                @if (TempData["OperationFailed"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["OperationFailed"]
                    </div>
                }
                <!-- BirthDay -->
                <div class="user-info input-group"><label asp-for="@Model.DateOfBirth" class="pull-left"></label></div>
                <div class="user-info input-group">
                    <span asp-validation-for="@Model.DateOfBirth" class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    <input asp-for="@Model.DateOfBirth" class="birth-info form-control" placeholder="Födelsedatum" title="Födelsedatum" required>
                </div>
                <br />
                <!-- Gender -->
                <div class="user-info input-group"><label asp-for="@Model.Gender" class="pull-left"></label></div>
                <div class="user-info input-group">
                    <span asp-validation-for="@Model.Gender" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <select asp-for="@Model.Gender" class="form-control" asp-items="Html.GetEnumSelectList<SingleGenders>()" title="Kön" required></select>
                </div>
                <br />
                <!-- Shirt Size -->
                <div class="user-info input-group"><label asp-for="@Model.ShirtSize" class="pull-left"></label></div>
                <div class="user-info input-group">
                    <span asp-validation-for="@Model.ShirtSize" class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
                    <select asp-for="@Model.ShirtSize" class="form-control" asp-items="Html.GetEnumSelectList<ShirtSizes>()" title="Tröjstorlek" required></select>
                </div>
                <br />
                <!-- Location -->
                <div class="user-info input-group"><label asp-for="@Model.Location" class="pull-left"></label></div>
                <div class="user-info input-group">
                    <span asp-validation-for="@Model.Location" class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
                    <input asp-for="@Model.Location" class="form-control" placeholder="Stad" title="Stad" required>
                </div>
                <br />
                <!-- Password -->
                <div class="user-info input-group"><label asp-for="@Model.Password" class="pull-left"></label></div>
                <div class="user-info input-group">
                    <span asp-validation-for="@Model.Password" class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    <input asp-for="@Model.Password" class="form-control" placeholder="Lösenord" pattern=".{6,}" title="Lösenordet måste vara minst sex tecken långt." required>
                </div>
                <span asp-validation-for="@Model.Password"></span>
                <br />
                <!-- ConfirmPassword -->
                <div class="user-info input-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Bekräfta lösenord" title="Ange samma lösenord som ovan." required>
                </div>
                <span asp-validation-for="@Model.ConfirmPassword"></span>
                <br />
                <!-- Submit button -->
                <button type="submit" class="btn btn-success">Bekräfta</button>
            </form>
        </div>
        <div class="bc-system-footer"></div>
    </div>
</div>