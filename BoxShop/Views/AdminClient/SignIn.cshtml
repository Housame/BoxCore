@model UserAdminSignInVM
@{
    ViewBag.Title = "SignIn";
}
<div class="modal-dialog">
    <div class="loginmodal-container">
        <h1>Inloggning</h1><br>
        <form asp-controller="AdminClient" asp-action="SignIn" method="post">
            <input asp-for="UserName" placeholder="Användare">
            <span style="color:red;" asp-validation-for="UserName"></span>
            <input asp-for="Password" placeholder="Lösenord">
            <span style="color:red;" asp-validation-for="Password"></span>
            <input type="submit" name="login" class="login loginmodal-submit" value="Logga in">
        </form>
        <div class="login-help">
            <a href="#">Registrera konto</a> - <a href="#">Glömt lösenord?</a>
        </div>
    </div>
</div>

