@model RegisterBoxVM
@{
    ViewBag.Title = "Register box";
}
<h1>Register box</h1>
<hr />
<br />

<div id="reportDiv" class="list-group" style="height:620px">
    <!-- Box Information -->
    <div class="container-fluid">
        <br />
        <br />
        <form asp-controller="superadmin" asp-action="registerbox" method="post" enctype="multipart/form-data">

            <div id="thickTooltip">
                <!-- First name -->
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicons glyphicons-building"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Name" data-toggle="tooltip" data-placement="right"
                           title="Can only contain letters A-Ö">
                </div>
                <br />
                <!-- Image -->
                <div class="input-group">
                    <span asp-validation-for="@Model.FormImage" class="input-group-addon"><i class="glyphicon glyphicon-tags"></i></span>
                    <input asp-for="@Model.FormImage" id="input-1" type="file" class="btn btn-default form-control file" style="width: 100%">
                </div>
                <br />
             </div>  
            <br />
            <br />
            <button type="submit" class="btn btn-default">Register</button>
            <br />
            <span asp-validation-for="Name"></span>
            <br />
        </form>
    </div>
</div>



@section scripts
{

    <script>
        $('[data-toggle="tooltip"]').tooltip();
    </script>

    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}





