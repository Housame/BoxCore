@model RegisterAdminVM
@{
    ViewBag.Title = "Confirmation";
}
<h1>Confirmation</h1>
<hr />
<br />
<div id="confirmationDiv" class="list-group" style="height:300px">
    <div class="container-fluid">
        <br />
        <form asp-controller="SuperAdmin" asp-action="ConfirmAdminRegistration" method="post">
            <!-- User Details -->
            <div class="list-group-item"><span><b style="float: left">First name:</b> <i style="float: right">@Model.FirstName</i></span><br></div>
            <div class="list-group-item"><span><b style="float: left">Last name:</b> <i style="float: right">@Model.LastName</i></span><br></div>
            @*<div class="list-group-item"><span><b style="float: left">Phone number:</b>  <i style="float: right">@Model.PhoneNumber</i></span><br></div>*@
            <div class="list-group-item"><span><b style="float: left">Email:</b>  <i style="float: right">@Model.Email</i></span><br></div>
            @if (Model.Box != null)
            {
                <div class="list-group-item"><span><b style="float: left">Box:</b>  <i style="float: right">@Model.Box</i></span><br></div>
            }
            else
            {
                <div class="list-group-item"><span><b style="float: left">Box:</b>  <i style="float: right; color:red">No box is related to this user</i></span><br></div>
            }
            <div class="list-group-item"><span><b style="float: left">Role:</b>  <i style="float: right">@Model.Role</i></span><br></div>
            <br />
            <!-- Navigation -->
            <div id="pagerButtons">
                <button asp-controller="SuperAdmin" asp-action="Register" formmethod="get" style="color: #51657e; border: 1px #51657e outset; float: left" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-chevron-left"></i></button>
                <button style="color: #51657e; border: 1px #51657e outset; float: right" class="btn btn-default" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
