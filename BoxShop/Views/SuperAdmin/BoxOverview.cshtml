@model BoxShowVM[]
@{
    ViewBag.Title = "Box Overview";
}
<h1>CrossFit Box</h1>
<hr />
<br />
<div class="row-fluid">
    <div class="span12">
        <!-- This is the div that does the trick: -->
        <div class="container">
            <div class="row">
                @foreach (var box in Model)
                {

                    <div class="col-md-3">
                        <div class="productBox">
                            @if (@box.Image != null)
                            {
                                var base64 = Convert.ToBase64String(@box.Image);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img class="img-thumbnail" src="@imgSrc" width="250" height="250" />
                            }
                            else
                            {
                                <img width="250" height="250" />
                            }
                            <hr />
                            <div class="form-group-item">
                                <strong>@box.Name</strong>
                            </div>
                            <br />
                            <br />
                            <form>
                                <a href="#" class="btn btn-success" onclick="location.href='@Url.Action("EditBox", "SuperAdmin", new { id = @box.Id })'"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                                <a href="#" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteBox", "SuperAdmin", new { id = @box.Id })'"><span class="glyphicon glyphicon-pencil"></span> Delete</a>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
