@model ProductDisplayVM

<div class="row">
    <div class="col-sm-3">
        <p>@Model.Name</p>
    </div>
    <div class="col-sm-3">
        <p>@Model.Vat</p>
    </div>
    <div class="col-sm-3">
        <p>@Model.Price kr</p>
    </div>
    <div class="col-sm-3">
        <button id="@Model.Id" class="btn btn-danger removeFromCart">
            <span class="glyphicon glyphicon-trash"></span> Ta bort
        </button>
    </div>
</div>
<br />