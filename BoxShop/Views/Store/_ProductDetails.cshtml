@model ProductDisplayVM

<div class="row">
    <div class="col-sm-3">
        @if (Model.Image.Length > 0)
        {
            var base64 = Convert.ToBase64String(Model.Image);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <img class="img-responsive" src="@imgSrc" width="50" height="50" />
        }
        else
        {
            <div class="" style="width: 50px; height: 50px"></div>
        }
    </div>
    <div class="col-sm-3">
        <p>@Model.Name</p>
    </div>
    <div class="col-sm-3">
        <p>@Model.Vat</p>
    </div>
    <div class="col-sm-3">
        <p>@Model.Price kr</p>
    </div>
</div>